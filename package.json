{
  "name": "keyboard_shortcut_mapper",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "sh -c 'oxlint --type-aware ${1:-src/}' --",
    "lint:fix": "sh -c 'oxlint --type-aware --fix-dangerously ${1:-src/}' --",
    "format": "sh -c 'oxfmt ${1:-src/}' --",
    "format:check": "sh -c 'oxfmt --check ${1:-src/}' --",
    "typecheck": "tsgo --noEmit",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "build": "bun build ./src/index.html --outdir ./dist --minify && cp -r ./src/static/icons ./dist/icons",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/styled-components": "^5.1.36",
    "@typescript/native-preview": "^7.0.0-dev.20260130.1",
    "husky": "^9.1.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4",
    "typescript-plugin-styled-components": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "styled-components": "^6.3.8",
    "tailwindcss": "^4.1.18"
  }
}
